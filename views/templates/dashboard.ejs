<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - AI Clinical Trial Predictor
</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1e40af',
                        secondary: '#3b82f6',
                        success: '#10b981',
                        warning: '#f59e0b',
                        danger: '#ef4444',
                        medical: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-cyan-500 rounded-lg flex items-center justify-center">
                        <i class="fas fa-clinic-medical text-white text-lg"></i>
                    </div>
                    <div>
                        <span class="text-xl font-bold text-gray-800"> AI clinical Health care Predictor </span>
                        <span class="text-xs text-blue-600 font-medium bg-blue-50 px-2 py-1 rounded-full ml-2">BETA</span>
                    </div>
                </div>
                <div class="flex items-center space-x-6">
                    <a href="/form" class="flex items-center text-gray-600 hover:text-blue-600 transition duration-200 font-medium">
                        <i class="fas fa-plus-circle mr-2"></i>New Analysis
                    </a>
                    <a href="/history" class="flex items-center text-gray-600 hover:text-blue-600 transition duration-200 font-medium">
                        <i class="fas fa-history mr-2"></i>History
                    </a>
                    <a href="/dashboard" class="flex items-center text-blue-600 font-semibold border-b-2 border-blue-600 pb-1">
                        <i class="fas fa-chart-bar mr-2"></i>Dashboard
                    </a>
                    <div class="relative group">
                        <button class="flex items-center space-x-3 bg-gray-50 hover:bg-gray-100 rounded-lg px-3 py-2 transition duration-200">
                            <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-cyan-400 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                                JD
                            </div>
                            <div class="text-left">
                                <div class="text-sm font-medium text-gray-700">John Doe</div>
                                <div class="text-xs text-gray-500">Researcher</div>
                            </div>
                            <i class="fas fa-chevron-down text-xs text-gray-400"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-lg py-2 hidden group-hover:block border border-gray-100 z-10">
                            <a href="/profile" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 transition duration-150">
                                <i class="fas fa-user-cog mr-3 text-gray-400"></i>Account Settings
                            </a>
                            <a href="/subscription" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 transition duration-150">
                                <i class="fas fa-crown mr-3 text-amber-400"></i>Upgrade Plan
                            </a>
                            <div class="border-t border-gray-100 my-1"></div>
                            <a href="/logout" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 transition duration-150">
                                <i class="fas fa-sign-out-alt mr-3 text-gray-400"></i>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Dashboard Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Total Analyses</p>
                        <p class="text-3xl font-bold text-gray-800 mt-1">42</p>
                    </div>
                    <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center">
                        <i class="fas fa-flask text-blue-500 text-xl"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-xs font-medium bg-green-50 text-green-600 px-2 py-1 rounded-full">
                        <i class="fas fa-arrow-up mr-1"></i>12% increase
                    </span>
                    <span class="text-xs text-gray-500 ml-2">from last month</span>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Success Rate</p>
                        <p class="text-3xl font-bold text-gray-800 mt-1">68%</p>
                    </div>
                    <div class="w-12 h-12 bg-green-50 rounded-lg flex items-center justify-center">
                        <i class="fas fa-chart-line text-green-500 text-xl"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-xs font-medium bg-green-50 text-green-600 px-2 py-1 rounded-full">
                        <i class="fas fa-arrow-up mr-1"></i>5% improvement
                    </span>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Active Trials</p>
                        <p class="text-3xl font-bold text-gray-800 mt-1">18</p>
                    </div>
                    <div class="w-12 h-12 bg-amber-50 rounded-lg flex items-center justify-center">
                        <i class="fas fa-clock text-amber-500 text-xl"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-xs font-medium bg-blue-50 text-blue-600 px-2 py-1 rounded-full">
                        8 Phase III trials
                    </span>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Avg. Confidence</p>
                        <p class="text-3xl font-bold text-gray-800 mt-1">84%</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-50 rounded-lg flex items-center justify-center">
                        <i class="fas fa-brain text-purple-500 text-xl"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-xs font-medium bg-green-50 text-green-600 px-2 py-1 rounded-full">
                        High accuracy
                    </span>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Success Prediction Distribution -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-800">Success Prediction Distribution</h2>
                    <div class="flex space-x-2">
                        <button class="text-xs bg-blue-50 text-blue-600 px-3 py-1 rounded-lg font-medium">All Time</button>
                        <button class="text-xs text-gray-500 px-3 py-1 rounded-lg font-medium hover:bg-gray-50">This Month</button>
                    </div>
                </div>
                <div class="h-80">
                    <canvas id="successChart"></canvas>
                </div>
            </div>

            <!-- Trials by Disease Type -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-800">Trials by Disease Area</h2>
                    <button class="text-xs text-blue-600 px-3 py-1 rounded-lg font-medium hover:bg-blue-50">
                        View All
                    </button>
                </div>
                <div class="h-80">
                    <canvas id="diseaseChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Additional Charts -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Monthly Analysis Trend -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-800">Monthly Analysis Trend</h2>
                    <button class="text-xs text-blue-600 px-3 py-1 rounded-lg font-medium hover:bg-blue-50">
                        <i class="fas fa-download mr-1"></i>Export
                    </button>
                </div>
                <div class="h-80">
                    <canvas id="trendChart"></canvas>
                </div>
            </div>

            <!-- Phase Distribution -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-800">Trial Phase Distribution</h2>
                    <button class="text-xs text-blue-600 px-3 py-1 rounded-lg font-medium hover:bg-blue-50">
                        Details
                    </button>
                </div>
                <div class="h-80">
                    <canvas id="phaseChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent Analyses & Quick Actions -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Recent Analyses -->
            <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-800">Recent Analyses</h2>
                    <a href="/history" class="text-sm text-blue-600 font-medium hover:text-blue-700">
                        View All <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
                <div class="space-y-4">
                    <!-- Analysis Item 1 -->
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-blue-50 transition duration-200">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-pills text-green-600"></i>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-800">Oncology - Drug A</h3>
                                <p class="text-sm text-gray-500">Phase III • 24 months</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                                <i class="fas fa-arrow-up mr-1"></i>High
                            </span>
                            <span class="text-sm text-gray-500">2 hours ago</span>
                            <button class="text-gray-400 hover:text-blue-600 transition duration-200">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Analysis Item 2 -->
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-blue-50 transition duration-200">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-heartbeat text-amber-600"></i>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-800">Cardiology - Treatment B</h3>
                                <p class="text-sm text-gray-500">Phase II • 18 months</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <span class="px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-medium">
                                <i class="fas fa-minus mr-1"></i>Medium
                            </span>
                            <span class="text-sm text-gray-500">1 day ago</span>
                            <button class="text-gray-400 hover:text-blue-600 transition duration-200">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Analysis Item 3 -->
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-blue-50 transition duration-200">
                        <div class="flex items-center space-x-4">
                            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                                <i class="fas fa-dna text-red-600"></i>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-800">Neurology - Therapy C</h3>
                                <p class="text-sm text-gray-500">Phase I • 12 months</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-xs font-medium">
                                <i class="fas fa-arrow-down mr-1"></i>Low
                            </span>
                            <span class="text-sm text-gray-500">3 days ago</span>
                            <button class="text-gray-400 hover:text-blue-600 transition duration-200">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions & Insights -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h2>
                    <div class="space-y-3">
                        <a href="/form" class="flex items-center justify-between p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition duration-200 group">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-plus text-white text-sm"></i>
                                </div>
                                <span class="font-medium text-gray-700">New Analysis</span>
                            </div>
                            <i class="fas fa-chevron-right text-gray-400 group-hover:text-blue-600"></i>
                        </a>
                        <a href="/compare" class="flex items-center justify-between p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition duration-200 group">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-exchange-alt text-white text-sm"></i>
                                </div>
                                <span class="font-medium text-gray-700">Compare Trials</span>
                            </div>
                            <i class="fas fa-chevron-right text-gray-400 group-hover:text-purple-600"></i>
                        </a>
                        <a href="/export" class="flex items-center justify-between p-3 bg-green-50 hover:bg-green-100 rounded-lg transition duration-200 group">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-file-export text-white text-sm"></i>
                                </div>
                                <span class="font-medium text-gray-700">Export Data</span>
                            </div>
                            <i class="fas fa-chevron-right text-gray-400 group-hover:text-green-600"></i>
                        </a>
                    </div>
                </div>

                <!-- AI Insights -->
                <div class="bg-gradient-to-r from-blue-500 to-cyan-500 rounded-xl shadow-lg p-6 text-white">
                    <h2 class="text-lg font-semibold mb-2">AI Insight</h2>
                    <p class="text-sm opacity-90 mb-4">Your oncology trials show 25% higher success probability compared to other disease areas.</p>
                    <div class="flex items-center justify-between">
                        <span class="text-xs bg-white bg-opacity-20 px-2 py-1 rounded-full">Trending Up</span>
                        <button class="text-xs bg-white text-blue-600 px-3 py-1 rounded-lg font-semibold hover:bg-opacity-90">
                            Explore
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center space-x-3 mb-4 md:mb-0">
                    <div class="w-8 h-8 bg-gradient-to-r from-blue-600 to-cyan-500 rounded-lg flex items-center justify-center">
                        <i class="fas fa-clinic-medical text-white text-sm"></i>
                    </div>
                    <span class="text-lg font-bold text-gray-800"> AI Clinical Trial Predictor
  </span>
                </div>
                <div class="text-center md:text-right">
                    <p class="text-sm text-gray-600 mb-2">
                        ⚠ This AI analysis is for educational and awareness purposes only.
                    </p>
                    <p class="text-xs text-gray-500">
                        It does not provide real medical or clinical advice.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Initialize Charts
        document.addEventListener('DOMContentLoaded', function() {
            // Success Prediction Distribution Chart
            const successCtx = document.getElementById('successChart').getContext('2d');
            const successChart = new Chart(successCtx, {
                type: 'doughnut',
                data: {
                    labels: ['High Success', 'Medium Success', 'Low Success'],
                    datasets: [{
                        data: [45, 35, 20],
                        backgroundColor: [
                            '#10b981',
                            '#f59e0b',
                            '#ef4444'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    },
                    cutout: '65%'
                }
            });

            // Disease Area Chart
            const diseaseCtx = document.getElementById('diseaseChart').getContext('2d');
            const diseaseChart = new Chart(diseaseCtx, {
                type: 'bar',
                data: {
                    labels: ['Oncology', 'Cardiology', 'Neurology', 'Immunology', 'Endocrinology'],
                    datasets: [{
                        label: 'Number of Trials',
                        data: [18, 12, 8, 6, 4],
                        backgroundColor: '#3b82f6',
                        borderRadius: 6,
                        borderSkipped: false,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            },
                            ticks: {
                                stepSize: 5
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // Monthly Trend Chart
            const trendCtx = document.getElementById('trendChart').getContext('2d');
            const trendChart = new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
                    datasets: [{
                        label: 'Analyses',
                        data: [4, 6, 5, 8, 7, 10, 12],
                        borderColor: '#3b82f6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#3b82f6',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // Phase Distribution Chart
            const phaseCtx = document.getElementById('phaseChart').getContext('2d');
            const phaseChart = new Chart(phaseCtx, {
                type: 'pie',
                data: {
                    labels: ['Phase I', 'Phase II', 'Phase III'],
                    datasets: [{
                        data: [25, 45, 30],
                        backgroundColor: [
                            '#60a5fa',
                            '#3b82f6',
                            '#1e40af'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>